{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "1.17.1",
	"default_locale": "en",
	"icons": {
		"32": "icons/tabManager.png"
	},

	"applications": {
		"gecko": {
			"id": "tab_manager@utb.dip.jp",
			"strict_min_version": "55.0"
		}
	},

	"browser_action": {
		"default_icon": "icons/tabManager.png",
		"default_title": "Tab Manager"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"permissions": [
		"tabs",
		"storage",
		"clipboardWrite"
	]
}
